@page
@model TourneyPlaner.Pages.UsersModel
@{
}
<br />
<h2>List of Users</h2>
<a class='btn btn-primary btn-sm' href='/User/CreateUser'>New User</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Password</th>
            <th>Salt</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.listUsers)
        {
            <tr>
                <td>@user.userID</td>
                <td>@user.userName</td>
                <td>@user.password</td>
                <td>@user.salt</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/User/EditUser?id=@user.userID">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/User/DeleteUser?id=@user.userID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>