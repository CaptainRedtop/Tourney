@page
@model TourneyPlaner.Pages.FavoriteMatchup.FavoriteMatchupModel
@{
}
<!--Page for handling favorite matchups in database-->
<br />
<h2>List of Favorite Matchups</h2>
<a class='btn btn-primary btn-sm' href='/FavoriteMatchup/CreateFavoriteMatchup'>New Favorite Matchup</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>MatchupID</th>
            <th>UserID</th>
        </tr>
    </thead>
    <tbody>
        <!--Retrieves all the favorite matchup objects from list-->
        @foreach (var favoriteMatchup in Model.favoriteMatchupList)
        {
            <tr>
                <td>@favoriteMatchup.iD</td>
                <td>@favoriteMatchup.matchupID</td>
                <td>@favoriteMatchup.userID</td>

                <td>
                    <a class="btn btn-primary btn-sm" href="/FavoriteMatchup/Edit?id=@favoriteMatchup.iD">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/FavoriteMatchup/Delete?id=@favoriteMatchup.iD">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
