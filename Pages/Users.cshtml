@page
@model TourneyPlaner.Pages.UsersModel
@{
}
<br />
<h2>List of Users</h2>
<a class='btn btn-primary btn-sm' href='/User/Create'>New User</a>
<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Password</th>
        </tr>
    </thead>
    <tbody>
@foreach (var user in Model.listUsers)
{
        <tr>
            <td>@user.userName</td>
            <td>@user.password</td>
            <td>
                <a class="btn btn-primary btn-sm" href="/User/Edit?id=@user.userName">Edit</a>
                <a class="btn btn-danger btn-sm" href="@Model.DeleteUser(user.userName)">Delete</a>
            </td>
            </tr>
        }
    </tbody>
</table>